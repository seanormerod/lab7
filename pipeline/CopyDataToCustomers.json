{
	"name": "CopyDataToCustomers",
	"properties": {
		"activities": [
			{
				"name": "CopyDataToCustomers",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "XmlSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFolderPath": "customers.xml",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "XmlReadSettings",
							"validationMode": "none",
							"namespaces": true
						}
					},
					"sink": {
						"type": "SqlPoolSink",
						"preCopyScript": "TRUNCATE table customers",
						"allowCopyCommand": true
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "Customers",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Customers_DedicatedPool",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}